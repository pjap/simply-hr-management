<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/css/index.css">
    <link rel="stylesheet" href="/stylesheets/index.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/stylesheets/js/index.js"></script>
    <script type="text/javascript" src="/stylesheets/index.js"></script>
    <title>JOB POSITION PAGE</title>
  </head>
  <body>

    <div id="wrapper">
      <div class="overlay"></div>

    <!-- Sidebar -->
    <nav class="navbar navbar-inverse navbar-fixed-top" id="sidebar-wrapper" role="navigation">
        <ul class="nav sidebar-nav">
            <li class="sidebar-brand">
                <a href="#">
                   Hacktiv8 HRM
                </a>
            </li>
            <li>
                <a href="#">@COMPANY</a>
            </li>
              <li><a href="/index">Homepage</a></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Menu Utama<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li class="dropdown-header"></li>
                  <li><a href="/employee">List Employee</a></li>
                  <li><a href="/rule">List Of Rule</a></li>
                  <li><a href="/jobposition">List Job Position</a></li>
                  <li><a href="/absence">Input Absence</a></li>
                </ul>
              </li>
              <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
        <button type="button" class="hamburger is-closed" data-toggle="offcanvas">
            <span class="hamb-top"></span>
            <span class="hamb-middle"></span>
            <span class="hamb-bottom"></span>
        </button>


    <div class="container-fluid">
      <h2 class="text-center"><strong>Table Position</strong></h2>
      <div class="text-center">
        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addModal">
          <i class="fa fa-user-plus"> Add New Position</i>
        </button>
      </div>
      <br>
      <table class="table table-hover table-stripped table-sm">
        <thead>
          <tr>
            <th>ID</th>
            <th>POSITION</th>
            <th>SALARY</th>
            <th colspan="2" class="text-center">OPTIONS</th>
          </tr>
        </thead>
        <tbody>
          <% dataPosition.forEach(rows => { %>
            <tr>
              <td><%= rows.id %></td>
              <td><%= rows.name_position %></td>
              <td><%= rows.salary %></td>
              <td class="text-right">
                <a href="/jobposition/edit/<%= rows.id %>">
                  <button type="button" class="btn btn-primary btn-sm">
                    <i class="fa fa-pencil"> Edit</i>
                  </button>
                </a>
              </td>
              <td>
                <a href="/jobposition/delete/<%= rows.id %>">
                  <button type="button" class="btn btn-primary btn-sm">
                    <i class="fa fa-trash"> Delete</i>
                  </button>
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
        </tbody>
      </table>

      <!-- START OF MODAL ( FOR SMALL / LARGE JUST + modal-sm / modal-lg) -->

      <!-- ADD MODAL -->
      <div class="modal fade" id="addModal" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal"><i class="fa fa-remove"></i></button>
              <!-- &times; -->
              <h4 class="modal-title">Form Add New Position</h4>
            </div>
            <!-- ACTION POST  WHEN SUBMIT-->
            <form class="" action="/jobposition/add" method="post">
            <div class="modal-body">
              <div class="form-group">
                <input class="form-control" type="text" name="name_position" placeholder="Input Position" required>
              </div>
              <div class="form-group">
                <input class="form-control" type="text" name="salary" placeholder="Input Salar" required>
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary btn-lg" style="width:100%;"><i class="fa fa-plus"> Add </i></button>
            </div>
            </form>
            <!-- END OF ACTION POST WHEN SUBMIT -->
          </div>
        </div>
      </div>
      <!-- ADD MODAL -->

        <!-- END OF MODAL -->
    </div>
  </div>
</div>
  </body>
</html>

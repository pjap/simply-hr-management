<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/css/index.css">
    <link rel="stylesheet" href="/stylesheets/css/datepicker.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/stylesheets/js/index.js"></script>
    <style media="screen">
    .table-striped>tbody>tr:nth-child(odd)>td,
.table-striped>tbody>tr:nth-child(odd)>th {
 background-color: #efeded
}
    </style>
    <title>ABSENCE PAGE</title>
  </head>
  <body>
    <div class="container-fluid">
      <h2 class="text-center"><strong>Table Absence</strong></h2>
      <div class="text-center">
        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addModal">
          <i class="fa fa-user-plus"> Add New Absence</i>
        </button>
      </div>
      <br>
      <table class="table table-responsive table-striped table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Check In</th>
            <th>Check Out</th>
            <th>Employee Name</th>
            <th>Keterangan Rule</th>
            <th>Position</th>
            <th colspan="2" class="text-center">OPTIONS</th>
          </tr>
        </thead>
        <tbody>
          <% dataAbsence.forEach((rows,index) => { %>
            <tr>
              <td><%= index+=1 %></td>
              <td><%= rows.date %></td>
              <td><%= rows.checkin %></td>
              <td><%= rows.checkout %></td>
              <td><%= rows.EmployeeId %></td>
              <td><%= rows.RuleId %></td>
              <td><%= rows.JobPositionId %></td>
              <td>
                <a href="/absence/edit/<%= rows.id %>">
                  <button type="button" class="btn btn-primary btn-sm">
                    <i class="fa fa-pencil"> Edit</i>
                  </button>
                </a>
              </td>
              <td>
                <a href="/absence/delete/<%= rows.id %>">
                  <button type="button" class="btn btn-primary btn-sm">
                    <i class="fa fa-trash"> Delete</i>
                  </button>
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
        </tbody>
      </table>

      <!-- START OF MODAL ( FOR SMALL / LARGE JUST + modal-sm / modal-lg) -->

      <!-- ADD MODAL -->
      <div class="modal fade" id="addModal" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal"><i class="fa fa-remove"></i></button>
              <!-- &times; -->
              <h4 class="modal-title">Form Add Absence</h4>
            </div>
            <!-- ACTION POST  WHEN SUBMIT-->
            <form class="" action="/absence/add" method="post">
            <div class="modal-body">
              <label for="dateofbirth">Date: </label>
                <input type="date" name="date" id="date">
              <div class="form-group">
                <input class="form-control" type="text" name="checkin" placeholder="Cek In" required>
              </div>
              <div class="form-group">
                  <input class="form-control" type="text" name="checkout" placeholder="Cek Out" required>
              </div>
              <div class="form-group">
                  <input class="form-control" type="text" name="EmployeeId" placeholder="Name Employee" required>
              </div>
              <div class="form-group">
                  <input class="form-control" type="text" name="RuleId" placeholder="Rules Name" required>
              </div>
              <div class="form-group">
                  <input class="form-control" type="text" name="JobPositionId" placeholder="Position" required>
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary btn-lg" style="width:100%;"><i class="fa fa-plus"> Add </i></button>
            </div>
            </form>
            <!-- END OF ACTION POST WHEN SUBMIT -->
          </div>
        </div>
      </div>
      <!-- ADD MODAL -->

        <!-- END OF MODAL -->
    </div>
  </body>
</html>
